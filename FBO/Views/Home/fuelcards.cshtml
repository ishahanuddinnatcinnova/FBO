                                        </label>
                                    </div>
                                    <div class="container2">
                                        <span class="inputCheckbox">
                                            @Html.CheckBox("chkFuelCard62", Model.fuelcards.chkFuelCard62)
                                        </span>
                                        <label for="chkFuelCard62">
                                            <img src="https://resources.globalair.com/fbo-images/fbo-fuel-cards/Titan%202.png?w=250&h=200&mode=crop" title="Titan Plus" />
                                        </label>
                                    </div>
                                    <div class="container2">
                                        <span class="inputCheckbox">
                                            @Html.CheckBox("chkFuelCard61", Model.fuelcards.chkFuelCard61)
                                        </span>
                                        <label for="chkFuelCard61">
                                            <img src="https://resources.globalair.com/fbo-images/fbo-fuel-cards/Titan%201.png?w=250&h=200&mode=crop" title="Titan" />
                                        </label>
                                    </div>
                                    <div class="container2">
                                        <span class="inputCheckbox">
                                            @Html.CheckBox("chkFuelCard63", Model.fuelcards.chkFuelCard63)
                                        </span>
                                        <label for="chkFuelCard63">
                                            <img src="https://resources.globalair.com/fbo-images/fbo-fuel-cards/usgovt-aircard.png?w=250&h=200&mode=crop" title="US Government Air Card" />
                                        </label>
                                    </div>
                                    <div class="container2">
                                        <span class="inputCheckbox">
                                            @Html.CheckBox("chkFuelCard66", Model.fuelcards.chkFuelCard66)
                                        </span>
                                        <label for="chkFuelCard66">
                                            <img src="https://resources.globalair.com/fbo-images/fbo-fuel-cards/worldfuel-avcard.png?w=250&h=200&mode=crop" title="World Fuel AVCARD" />
                                        </label>
                                    </div>
                                    <div class="container2">
                                        <span class="inputCheckbox">
                                            @Html.CheckBox("chkFuelCard69", Model.fuelcards.chkFuelCard69)
                                        </span>
                                        <label for="chkFuelCard69">
                                            <img src="https://resources.globalair.com/fbo-images/fbo-fuel-cards/worldfuel-uvair-fuel.png?w=250&h=200&mode=crop" title="World Fuel UVA" />
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3 col-12 text-center">
                                <button type="submit" class="btn btn-lg btn-primary">Save Changes</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>




        if ($('#s').show())
            setTimeout(function () {
                $('#s').hide();
            }, 4000);


        else if ($('#f').show()) {


            setTimeout(function () {
                $('#f').hide();
            }, 4000);
        }
    </script>
    }