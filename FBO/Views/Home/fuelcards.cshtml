                                        <label for="chkFuelCard71">
                                            <img src="https://resources.globalair.com/fbo-images/fbo-fuel-cards/phillips66.png?w=250&h=200&mode=crop" title="Phillips 66" %" />
                                        </label>
                                    </div>
                                    <div class="container2">
                                        <span class="inputCheckbox">
                                            @Html.CheckBox("chkFuelCard70", Model.fuelcards.chkFuelCard70)
